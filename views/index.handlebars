<div class="container-fluid">

    <div id="top-bar">
        
        <h1><img src="/assets/img/burger_icon.jpeg" alt="burger" height="125" width="125">Eat the burger! <img src="/assets/img/burger_icon.jpeg" alt="burger" height="125" width="125"></h1>
    </div>
    <div class="task">

            {{#each burgers}} {{#unless this.devoured}}
            <div>
                <pre class="burgerName">{{this.id}}.{{this.burger_name}}</pre>
            </div>
            <div></div>
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-default btn-warning" id="devour" data-status={{devoured}}>Devour it!</button>
            </form>

            {{/unless}} {{/each}}
        </div>

        <div class="task">
            {{#each burger_data}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly> {{/if}} {{/each}}
        </div>


{{!-- <div class="container"> --}}
    <div class="row">
        <div class="text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id='text-enter-button'>SUBMIT</button>
            </form>
            <p>Enter in a burger you would like to eat!</p>
        </div>
    </div>
{{!-- </div> --}}
</div>