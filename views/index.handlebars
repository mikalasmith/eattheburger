<div class="container-fluid">

    <div id="top-bar">
        <h1>
            <img src="/assets/img/burger_icon.jpeg" alt="burger" height="125" width="125" id="right">Eat the burger!
            <img src="/assets/img/burger_icon.jpeg" alt="burger" height="125" width="125" id="left">
        </h1>
    </div>

    <div class="row enter_burger">
        <div class="text-center enter_section col-sm-12">
            <form action="/burgers/create" method="POST">
            <p class="instructions">Enter in a burger you would like to eat!</p>
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-danger" id='text-enter-button'>SUBMIT</button>
            </form>
            
        </div>
    </div>


    <div class="row">
        <div class="task col-sm-5 burger_container" id="availBurgers">
            <div>
                <h2 id="left-side">To be Devoured!</h2>
            </div>
            {{#each burgers}} {{#unless this.devoured}}
            <div>
                <pre class="burgerName">{{this.id}}.{{this.burger_name}}</pre>
            </div>
            <div></div>
            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-default btn-danger" id="devour" data-status={{devoured}}>Devour it!</button>
            </form>

            {{/unless}} {{/each}}
        </div>


        <div class="task col-sm-5 burger_container" id="devouredBurgers">
            <div>
                <h2 id="right-side">Devoured!</h2>
            </div>
            {{#each burgers}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" id="new_burgers"> {{/if}} {{/each}}
        </div>
    </div>


</div>